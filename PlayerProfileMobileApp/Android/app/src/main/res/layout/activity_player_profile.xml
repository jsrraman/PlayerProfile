<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
    android:layout_width="100dp"
    android:layout_height="25dp"
    android:text="text1"
    android:id="@+id/textView1" />

    <TextView
    android:layout_width="100dp"
    android:layout_height="25dp"
    android:text="text2"
        android:id="@+id/textView2"
    android:layout_below="@+id/textView1"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/textView2"
        android:orientation="horizontal"
        android:id="@+id/linearlayout_avg_header">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/batting_fielding"
            android:id="@+id/button_batting" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bowling"
            android:id="@+id/button_bowling" />
    </LinearLayout>

    <FrameLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/player_profile_avg_fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:layout_below="@+id/linearlayout_avg_header"
    tools:context="com.rajaraman.playerprofile.ui.PlayerProfileActivity"
    tools:ignore="MergeRootFrame"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true">
    </FrameLayout>

</RelativeLayout>